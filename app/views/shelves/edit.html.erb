<h2>棚を編集する</h2>

<%= form_with model: @shelf, local: true do |f| %>
  <div>
    <%= f.label :title, "タイトル" %><br>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :description, "説明" %><br>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :image, "画像" %><br>
    <%= f.file_field :image %>
  </div>

  <div>
    <%= f.submit "更新" %>
  </div>
<% end %>

<%= link_to "戻る", shelf_path(@shelf) %>
