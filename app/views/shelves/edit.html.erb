<h2 class="mb-4">棚の編集</h2>

<%= render "form", shelf: @shelf %>

<div class="mt-3">
  <%= link_to "Show this shelf", @shelf, class: "btn btn-outline-secondary me-2" %>
  <%= link_to "Back to shelves", shelves_path, class: "btn btn-outline-secondary me-2" %>

  <%= link_to "Delete this shelf",
              shelf_path(@shelf),
              data: { turbo_method: :delete, confirm: "本当に削除しますか？" },
              class: "btn btn-outline-danger" %>
</div>
