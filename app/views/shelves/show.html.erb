<p style="color: green"><%= notice %></p>

<%= render @shelf %>

<h3>アイテムを追加</h3>
<%= form_with(model: [@shelf, Item.new], local: true, html: { multipart: true }) do |form| %>
  <div>
    <%= form.label :title, "タイトル" %><br>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description, "説明" %><br>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :purchased_on, "購入日" %><br>
    <%= form.date_field :purchased_on %>
  </div>

  <div>
    <%= form.label :purchased_at, "購入場所" %><br>
    <%= form.text_field :purchased_at %>
  </div>

  <div>
    <%= form.label :image, "画像" %><br>
    <%= form.file_field :image %>
  </div>

  <%= form.submit "追加" %>
<% end %>

<hr>

<h3>棚のアイテム一覧</h3>
<div class="item-list">
  <% @shelf.items.each do |item| %>
    <div class="item-box">
      <%= link_to shelf_item_path(@shelf, item) do %>
        <% if item.image.present? %>
          <%= image_tag item.image.url, size: "150x150" %>
        <% end %>
        <p><%= item.title %></p>
      <% end %>
    </div>
  <% end %>
</div>

<div>
  <%= link_to "Edit this shelf", edit_shelf_path(@shelf) %> |
  <%= link_to "Back to shelves", shelves_path %>

  <%= button_to "Destroy this shelf", @shelf, method: :delete %>
</div>
