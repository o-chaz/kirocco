<h2>アイテムを編集</h2>

<%= form_with(model: [@shelf, @item], local: true) do |form| %>
  <div>
    <%= form.label :title, "タイトル" %><br>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description, "説明" %><br>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :purchased_on, "購入日" %><br>
    <%= form.date_field :purchased_on %>
  </div>

  <div>
    <%= form.label :purchased_at, "購入場所" %><br>
    <%= form.text_field :purchased_at %>
  </div>

  <div>
    <%= form.label :image, "画像" %><br>
    <%= form.file_field :image, accept: "image/*" %>
  </div>

  <%= form.submit "更新する" %>
<% end %>

<%= link_to '戻る', shelf_item_path(@shelf, @item), class: "btn btn-secondary" %>
